<?xml version="1.0"?>
<ruleset name="Ademti WordPress Project">
	<description>Coding standard definitions for Ademti Software Ltd. WordPress projects</description>
	<rule ref="WordPress-Extra">
		<exclude name="Generic.Files.LowercasedFilename.NotFound"/>
		<exclude name="WordPress.XSS.EscapeOutput.OutputNotEscaped"/>
		<exclude name="WordPress.XSS.EscapeOutput.UnsafePrintingFunction"/>
	</rule>
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>EDD_SL_Plugin_Updater.php</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>
	<exclude-pattern>*.less</exclude-pattern>
</ruleset>
